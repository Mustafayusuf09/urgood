# UrGood Backend - Production Environment Template
# Copy this file to .env for production deployment
# DO NOT commit .env files to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@your-production-db:5432/urgood_production"
REDIS_URL="redis://your-redis-instance:6379"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV="production"
PORT=3000
API_VERSION="v1"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate strong secrets with: openssl rand -base64 32
JWT_SECRET="REPLACE_WITH_STRONG_32_CHAR_SECRET_FOR_PRODUCTION"
JWT_REFRESH_SECRET="REPLACE_WITH_DIFFERENT_32_CHAR_SECRET_FOR_PRODUCTION"
ENCRYPTION_KEY="REPLACE_WITH_32_CHAR_ENCRYPTION_KEY_FOR_PRODUCTION"
BCRYPT_ROUNDS=14

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=50   # Stricter for production
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY="sk-your-production-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"  # Cost-effective for production
OPENAI_MAX_TOKENS=1000      # Conservative for production
OPENAI_TEMPERATURE=0.7      # Balanced for production

# =============================================================================
# FIREBASE ADMIN SDK
# =============================================================================
FIREBASE_PROJECT_ID="urgood-dc7f0"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour production Firebase private key here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@urgood-dc7f0.iam.gserviceaccount.com"

# =============================================================================
# STRIPE CONFIGURATION (PRODUCTION)
# =============================================================================
STRIPE_SECRET_KEY="sk_live_your_production_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_production_stripe_webhook_secret_here"
STRIPE_PREMIUM_MONTHLY_PRICE_ID="price_your_production_monthly_price_id"
STRIPE_PREMIUM_YEARLY_PRICE_ID="price_your_production_yearly_price_id"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_FROM="noreply@urgood.app"
SENDGRID_API_KEY="SG.your_production_sendgrid_api_key_here"
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"
SMTP_PASS="your_sendgrid_api_key_here"

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL="warn"  # Less verbose for production
SENTRY_DSN="https://your-production-sentry-dsn-here"

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_FILE_SIZE=5242880  # 5MB for production
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN="https://urgood.app,https://www.urgood.app,https://urgood-dc7f0.web.app,https://urgood-dc7f0.firebaseapp.com"

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH="/etc/ssl/certs/urgood.app.pem"
SSL_KEY_PATH="/etc/ssl/private/urgood.app.key"

# =============================================================================
# HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_INTERVAL=60000   # 1 minute for production
HEALTH_CHECK_TIMEOUT=10000    # 10 seconds for production

# =============================================================================
# CRISIS DETECTION
# =============================================================================
CRISIS_KEYWORDS="suicide,kill myself,end it all,want to die,hurt myself,self harm,overdose,jump off"
CRISIS_WEBHOOK_URL="https://your-crisis-response-webhook.urgood.app"
EMERGENCY_CONTACT_EMAIL="crisis@urgood.app"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_VOICE_CHAT_ENABLED=true
FEATURE_CRISIS_DETECTION_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_PREMIUM_FEATURES_ENABLED=true
