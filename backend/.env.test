# Database
DATABASE_URL="postgresql://username:password@localhost:5432/urgood_db"
REDIS_URL="redis://localhost:6379"

# Server Configuration
NODE_ENV="development"
PORT=3000
API_VERSION="v1"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key-here"
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4o"
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.8

# Firebase Admin SDK
FIREBASE_PROJECT_ID="urgood-dc7f0"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@urgood-dc7f0.iam.gserviceaccount.com"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"
STRIPE_PREMIUM_MONTHLY_PRICE_ID="price_premium_monthly_id"
STRIPE_PREMIUM_YEARLY_PRICE_ID="price_premium_yearly_id"

# Email Configuration (SendGrid/SMTP)
EMAIL_FROM="noreply@urgood.app"
SENDGRID_API_KEY="SG.your_sendgrid_api_key_here"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Monitoring & Logging
LOG_LEVEL="info"
SENTRY_DSN="https://your-sentry-dsn-here"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# CORS
CORS_ORIGIN="http://localhost:3000,https://urgood.app"

# SSL/TLS
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/key.pem"

# Health Checks
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
HEALTH_CHECK_TIMEOUT=5000    # 5 seconds

# Crisis Detection
CRISIS_KEYWORDS="suicide,kill myself,end it all,want to die,hurt myself"
CRISIS_WEBHOOK_URL="https://your-crisis-response-webhook.com"
EMERGENCY_CONTACT_EMAIL="crisis@urgood.app"

# Feature Flags
FEATURE_VOICE_CHAT_ENABLED=true
FEATURE_CRISIS_DETECTION_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_PREMIUM_FEATURES_ENABLED=true
