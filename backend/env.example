# Database
DATABASE_URL="postgresql://username:password@localhost:5432/urgood_db"
REDIS_URL="redis://localhost:6379"

# Server Configuration
NODE_ENV="development"
PORT=3000
API_VERSION="v1"

# Security - NEVER use these values in production!
JWT_SECRET="DEVELOPMENT_ONLY_JWT_SECRET_CHANGE_FOR_PRODUCTION"
JWT_REFRESH_SECRET="DEVELOPMENT_ONLY_REFRESH_SECRET_CHANGE_FOR_PRODUCTION"
ENCRYPTION_KEY="DEVELOPMENT_ONLY_ENCRYPTION_KEY_32_CHARS"
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# OpenAI Configuration - REPLACE WITH REAL API KEY
OPENAI_API_KEY="DEVELOPMENT_ONLY_REPLACE_WITH_REAL_OPENAI_KEY"
OPENAI_MODEL="gpt-4o"
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.8

# Firebase Admin SDK
FIREBASE_PROJECT_ID="urgood-dc7f0"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@urgood-dc7f0.iam.gserviceaccount.com"

# Stripe Configuration - USE TEST KEYS FOR DEVELOPMENT
STRIPE_SECRET_KEY="DEVELOPMENT_ONLY_REPLACE_WITH_STRIPE_TEST_KEY"
STRIPE_WEBHOOK_SECRET="DEVELOPMENT_ONLY_REPLACE_WITH_STRIPE_WEBHOOK_SECRET"
STRIPE_PREMIUM_MONTHLY_PRICE_ID="DEVELOPMENT_ONLY_REPLACE_WITH_PRICE_ID"
STRIPE_PREMIUM_YEARLY_PRICE_ID="DEVELOPMENT_ONLY_REPLACE_WITH_PRICE_ID"

# Email Configuration (SendGrid/SMTP)
EMAIL_FROM="noreply@urgood.app"
SENDGRID_API_KEY="SG.your_sendgrid_api_key_here"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Monitoring & Logging
LOG_LEVEL="info"
SENTRY_DSN="https://your-sentry-dsn-here"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# CORS
CORS_ORIGIN="http://localhost:3000,https://urgood.app"

# SSL/TLS
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/key.pem"

# Health Checks
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
HEALTH_CHECK_TIMEOUT=5000    # 5 seconds

# Crisis Detection
CRISIS_KEYWORDS="suicide,kill myself,end it all,want to die,hurt myself"
CRISIS_WEBHOOK_URL="https://your-crisis-response-webhook.com"
EMERGENCY_CONTACT_EMAIL="crisis@urgood.app"

# Feature Flags
FEATURE_VOICE_CHAT_ENABLED=true
FEATURE_CRISIS_DETECTION_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_PREMIUM_FEATURES_ENABLED=true
